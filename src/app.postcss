/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

html,
body {
  background: #000;
  font-family: 'Lexend', sans-serif;
}

.plyr {
  --plyr-color-main: #c8102e;
  --plyr-video-control-background-hover: #c8102e;
}

.plyr__poster {
  background-size: cover;
}

.plyr--video .plyr__controls {
  background: #333;
  padding-top: 12px;
}

.plyr--video,
.plyr__video-wrapper {
  background: white;
}

* {
  scroll-behavior: smooth;
}
